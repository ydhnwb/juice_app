<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    android:elevation="2dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:text="Prieyudha Akadita S"
            android:id="@+id/order_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/order_price"
            android:textStyle="bold"
            android:textColor="@color/colorGreen"
            android:text="Rp. 35.000,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_gravity="end"
            android:id="@+id/order_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.skydoves.expandablelayout.ExpandableLayout
            android:layout_width="match_parent"
            android:id="@+id/order_detail"
            app:expandable_duration="300"
            android:layout_marginTop="16dp"
            app:expandable_isExpanded="false"
            app:expandable_spinner="@drawable/ic_keyboard_arrow_down_black_24dp"
            app:expandable_secondLayout="@layout/etc_expandable_child_layout"
            app:expandable_parentLayout="@layout/etc_expandable_parent_layout"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>